    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: FastAPI",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "app.main:app",
                "--host",
                "0.0.0.0",
                "--port",
                "8000",
                "--reload"
            ],
            "jinja": false
        },
        //Node angular Ng Serve
        {
            "name": "Node: Angular: Ng Serve",
            "type": "node",
            "request": "launch",
            "program": "node_modules/.bin/ng",
            "args": [
                "serve"
            ],
            "cwd": "frontend/english-academy/",
            "console": "integratedTerminal",
            "preLaunchTask": "uvicorn"
        }
    ]
}